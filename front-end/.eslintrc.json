{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "commonjs": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:react/jsx-runtime"
    // "plugin:testing-library/react",
    // "plugin:jest/all"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "babelOptions": {
      "presets": "@babel/preset-react"
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "jsx"
  ],
  "rules": {
    "no-console": "off",
    "quotes": [
      "error",
      "double"
    ],
    "react/prop-types": 0,
    "linebreak-style": "off",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}