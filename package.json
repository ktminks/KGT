    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@shelf/jest-mongodb": "^2.1.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "babel": "^6.23.0",
    "babel-jest": "^27.4.2",
    "babel-loader": "^8.2.3",
