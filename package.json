{
  "name": "kgt",
  "version": "1.0.0",
  "description": "Kitten Growth Tracker using MERN on AWS",
  "repository": {
    "type": "git",
    "url": "git@github.com:ktminks/KGT.git"
  },
  "keywords": [
    "health",
    "kitten",
    "cat",
